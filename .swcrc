{
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "target": "es2021",
    "keepClassNames": true,
    "baseUrl": "./",
    "paths": {
      "@core": ["src/@core"],
      "@core/*": ["src/@core/*"],
      "@shared": ["src/@shared"],
      "@shared/*": ["src/@shared/*"]
    }
  },
  "module": {
    "type": "commonjs"
  },
  "sourceMaps": false,
  "minify": false
}
